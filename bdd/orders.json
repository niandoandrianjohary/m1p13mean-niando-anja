{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "_id",
    "buyerId",
    "createdAt",
    "items",
    "shopId",
    "status",
    "totalPrice"
  ],
  "properties": {
    "_id": {
      "$ref": "#/$defs/ObjectId"
    },
    "buyerId": {
      "$ref": "#/$defs/ObjectId"
    },
    "createdAt": {
      "$ref": "#/$defs/Date"
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "priceAtPurchase",
          "productId",
          "qty"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "priceAtPurchase": {
            "$ref": "#/$defs/Double"
          },
          "productId": {
            "$ref": "#/$defs/ObjectId"
          },
          "qty": {
            "type": "integer"
          }
        }
      }
    },
    "shopId": {
      "$ref": "#/$defs/ObjectId"
    },
    "status": {
      "type": "string"
    },
    "totalPrice": {
      "$ref": "#/$defs/Double"
    }
  },
  "$defs": {
    "ObjectId": {
      "type": "object",
      "properties": {
        "$oid": {
          "type": "string",
          "pattern": "^[0-9a-fA-F]{24}$"
        }
      },
      "required": [
        "$oid"
      ],
      "additionalProperties": false
    },
    "Double": {
      "oneOf": [
        {
          "type": "number"
        },
        {
          "type": "object",
          "properties": {
            "$numberDouble": {
              "enum": [
                "Infinity",
                "-Infinity",
                "NaN"
              ]
            }
          }
        }
      ]
    },
    "Date": {
      "type": "object",
      "properties": {
        "$date": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "$date"
      ],
      "additionalProperties": false
    }
  }
}